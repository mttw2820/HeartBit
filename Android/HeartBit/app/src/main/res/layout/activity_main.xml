<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:paddingLeft="12dp"    android:paddingRight="16dp"    android:paddingTop="15dp"    android:background="@drawable/ui_background"    android:scaleType="fitCenter"    tools:context=".ConsumerActivity" >    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginHorizontal="20dp"        android:orientation="horizontal"        android:weightSum="10">        <!-- 연결 버튼 -->        <ImageButton            android:id="@+id/buttonConnect"            android:scaleType="fitCenter"            android:layout_width="140dp"            android:layout_height="80dp"            android:layout_marginRight="10dp"            android:layout_weight="5"            android:onClick="mOnClick"            android:background="@null"            android:src="@drawable/ui_connectbtn"/>        <ImageButton            android:id="@+id/buttonDisconnect"            android:scaleType="fitCenter"            android:layout_width="140dp"            android:layout_height="80dp"            android:layout_marginLeft="10dp"            android:layout_weight="5"            android:onClick="mOnClick"            android:background="@null"            android:src="@drawable/ui_disconnectbtn"/>    </LinearLayout>    <!-- 연결 상태 = 이미지로 기능 변환 완료    <TextView        android:id="@+id/tvStatus"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:gravity="center"        android:layout_weight="0.06"        android:textSize="24sp"        android:textStyle="bold" />    -->    <!-- 현재 상태 이미지 -->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="170dp"        android:orientation="horizontal"        android:weightSum="10"        >        <!-- HRM 상태 -->        <RelativeLayout            android:layout_width="150dp"            android:layout_height="match_parent"            android:layout_margin="10dp"            android:layout_weight="5">            <ImageView                android:layout_width="match_parent"                android:layout_height="match_parent"                android:scaleType="fitCenter"                android:background="@null"                android:src="@drawable/ui_heart_rate_frame"/>            <!-- 연결 상태 -->            <ImageView                android:id="@+id/HRMisConnect"                android:layout_width="match_parent"                android:layout_height="50dp"                android:layout_marginTop="15dp"                android:scaleType="fitCenter"                android:background="@null"                android:src="@drawable/ui_hrm_off"                />            <!-- HRM 정보 -->            <TextView                android:id="@+id/recentHRM"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="center_horizontal"                android:layout_marginTop="50dp"                android:textSize="50dp"                android:text="NO"                android:textColor="#FFFF"                android:textStyle="bold"                android:background="@null"                />            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="center_horizontal"                android:layout_marginTop="110dp"                android:text="BPM"                android:textColor="#FFFF"                android:textSize="20dp"                android:background="@null" />        </RelativeLayout>        <LinearLayout            android:layout_width="150dp"            android:layout_height="match_parent"            android:orientation="vertical"            android:layout_weight="5"            android:weightSum="10"            >        <ImageView            android:id="@+id/weatherImage"            android:layout_width="150dp"            android:layout_height="150dp"            android:layout_gravity="center_horizontal"            android:scaleType="fitCenter"            android:background="@null"            android:src="@drawable/sunny"            android:layout_weight="8"/>            <!-- 현재 온도 메시지 -->            <TextView                android:id="@+id/temp_message"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="right"                android:text="Temperature"                android:textSize="15sp"                android:layout_weight="1"/>            <TextView                android:id="@+id/time_message"                android:layout_width="match_parent"                android:layout_height="14dp"                android:gravity="end"                android:text="TimeMessage"                android:textSize="10sp"                android:layout_weight="1"/>        </LinearLayout>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="vertical"        android:layout_marginBottom="20dp"        android:weightSum = "20"        >        <ImageButton            android:id="@+id/buttonSend"            android:layout_width="match_parent"            android:layout_height="0dp"            android:scaleType="fitCenter"            android:onClick="mOnClick"            android:background="@null"            android:src="@drawable/ui_musicbtn"            android:layout_weight="3"/>        <!-- 음악 추천 리스트 -->        <RelativeLayout            android:layout_height="0dp"            android:layout_width="match_parent"            android:layout_margin="3dp"            android:layout_weight="1.5">            <ImageView                android:layout_width="match_parent"                android:layout_height="25dp"                android:src="@drawable/phrase_background"                android:scaleType="fitCenter"                android:background="@null"                />            <TextView                android:id="@+id/bpmRecText"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:textAlignment="center"                android:text="BPM 기반 추천 음악"                android:textSize="15dp"                android:textColor="#000"                android:textStyle="normal"                android:gravity="center_horizontal"                />        </RelativeLayout>        <ListView            android:id="@+id/bpm_musicList"            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_margin="5dp"            android:layout_weight="7"            >        </ListView>        <RelativeLayout            android:layout_height="0dp"            android:layout_width="match_parent"            android:layout_margin="3dp"            android:layout_weight="1.5">            <ImageView                android:layout_width="match_parent"                android:layout_height="25dp"                android:src="@drawable/phrase_background"                android:scaleType="fitCenter"                android:background="@null"                />            <TextView                android:id="@+id/weatherRecText"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:textAlignment="center"                android:text="Weather 기반 추천 음악"                android:textSize="15dp"                android:textColor="#000"                android:textStyle="normal"                android:gravity="center_horizontal" />        </RelativeLayout>        <ListView            android:id="@+id/weather_musicList"            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_margin="5dp"            android:layout_weight="7"            >        </ListView>    </LinearLayout>    <ListView        android:visibility="invisible"        android:id="@+id/lvMessage"        android:layout_width="match_parent"        android:layout_height="0dip">    </ListView></LinearLayout>