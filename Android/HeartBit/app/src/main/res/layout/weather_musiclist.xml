<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical" >    <RelativeLayout        android:layout_height="50dp"        android:layout_width="match_parent"        android:layout_margin="1dp">        <ImageView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:scaleType="fitStart"            android:src="@drawable/musiclist_background"            android:background="@null"            />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal"            android:weightSum="10"            >            <TextView                android:id="@+id/weather_musicData"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:text="music - singer"                android:textSize="15dp"                android:layout_marginLeft = "15dp"                android:layout_marginVertical = "5dp"                android:layout_weight = "8"                android:textColor="#000088"                />            <ImageButton                android:id="@+id/wMusicYoutube"                android:layout_width="0dp"                android:layout_height="40dp"                android:scaleType="fitCenter"                android:src="@drawable/youtube_btn"                android:background="@null"                android:layout_weight = "2"                android:layout_marginRight="5dp"                android:layout_gravity="center_vertical"                />        </LinearLayout>    </RelativeLayout></LinearLayout>